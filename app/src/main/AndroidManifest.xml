<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.reminder">

    <application
        android:name=".Globals"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <!-- android:theme="@style/AppTheme" -->

        <activity
            android:name=".MainActivity"
            android:label="To Do Reminder">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".EditReminderActivity"
            android:label="Edit Reminder"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <!-- <receiver android:name="com.example.reminder.AlarmReceiver"> -->
        <!-- <uses-permission android:name="com.example.reminder.SET_ALARM"/> -->


        <!-- </receiver> -->
    </application>

</manifest>